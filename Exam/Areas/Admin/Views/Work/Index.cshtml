@using Exam.ViewModels.WorkViewModels
@model List<WorkGetVM>

<div class="container">

    <div class="row">

        <div class="col-2">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category Name</th>
                  
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var work in Model)
                {
                    <tr>
                        <th scope="row">@work.Id</th>
                        <td><img src="~/assets/images/@work.ImagePath" /></td>
                        <td>@work.Name</td>
                       <td>@work.CategoryName</td>
                       
                        <td>
                            <a asp-action="Update" asp-route-id="@work.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@work.Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                }


            </tbody>
        </table>


    </div>
</div>